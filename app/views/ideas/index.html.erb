<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <%#td><%= idea.picture ></td%>
        <td><%= image_tag idea.picture_url(:small_thumb)%></td>
        <td><%= link_to 'Show', idea %></td>
        <td>
          <% if can? :update, idea %>
            <%= link_to 'Edit', edit_idea_path(idea) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, idea %>
            <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        </td>
         
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :new, @idea %>
  <%= link_to 'New Idea', new_idea_path %>
<% end %> 
